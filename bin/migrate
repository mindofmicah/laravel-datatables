#!/usr/bin/env php
<?php
require 'vendor/autoload.php';

$schema = buildCapsuleFromConfigFile(__DIR__ . '/../integrated.json')->schema();


$schema->dropIfExists('people');
$schema->create('people', function($table) {
    $table->increments('id');
    $table->string('first');
    $table->string('last');
    $table->timestamps();
});

$schema->dropIfExists('m');
$schema->create('m', function($table) {
    $table->increments('id');
    $table->string('hi');
    $table->timestamps();
});

